{% extends 'base.html.twig'%}

{% block body %}
    <article>
        <h2>{{ article.title }}</h2>
        <div class="metadata">Ecrit le {{ article.createAt | date('d/m/Y') }} à {{ article.createAt | date('H:i')}} dans la caté<gorie>{{article.category.title}}</gorie></div>
        <div class="content">
            <img src="{{ article.image }}" alt="">
            {{ article.content | raw }}
        </div>
    </article>

    <section id="commentaires">
        {% for comment in article.comments %}
            <div class="comment">
                <div class="row">
                    <div class="col-3">
                        {{comment.autor}}(<small>{{comment.createdAt | date ('d/m/Y à H:i')}}</small>)
                    </div>
                    <div class="col">
                        {{comment.contenu | raw}}
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock %}